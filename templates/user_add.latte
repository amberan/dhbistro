<div class="container-fluid mt-3 mb-3 mr-2 w-100">
    <div class="row mb-1">
        <div class="col-6 text-left">
            <h4>
                {$text['vytvorituzivatele']}
            </h4>
        </div>
        <div class="col-6 text-right">
        </div>
    </div>
    <form action="/users" method="post">
        <div class="row mb-2">
            <div class="col-12 col-md-3">
                <label class="mt-3" for="login">
                    {$text['uzivatelskejmeno']}:
                </label>
                <input class="form-control" type="text" name="login" id="login" />
            </div>
            <div class="col-12 col-md-3">
                <label class="mt-3" for="heslo">
                    {$text['heslo']}:
                </label>
                <input class="form-control" type="text" name="heslo" id="heslo" value="{$new_password}" />
            </div>
            <div class="col-12 col-md-3">
                <label class="mt-3" for="email">
                    {$text['email']}:
                </label>
                <input class="form-control" type="text" name="email" id="email" />
            </div>
            <div class="col-12 col-md-3">
                <label class="mt-3" for="login">
                    {$text['cisloosoby']}:
                </label>
                <select class="form-control" name="idperson" id="idperson">
                    <option value=""> ??? </option>
                    {foreach $person as $persona}
                        <option value="{$persona[0]}">{$persona[1]}, {$persona[2]}</option>
                    {/foreach}
                </select>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-12">
                {$text['prava']}
            </div>
                <div class="col-3">
                    <div class="input-group">
